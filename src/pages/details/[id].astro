---
import Header from '../../components/Header.astro'
import Layout from '../../layouts/Layout.astro'
import movies from '../../content/movies/movie-list.json'

export function getStaticPaths() {
	return [
		{ params: { id: '1' } },
		{ params: { id: '2' } },
		{ params: { id: '3' } },
		{ params: { id: '4' } },
		{ params: { id: '5' } },
		{ params: { id: '6' } },
		{ params: { id: '7' } },
		{ params: { id: '8' } }
	]
}

// const movies = await getEntry('movies', 'movie-list')
const { id } = Astro.params
---

<Layout title="Welcome to Astro.">
	<main class="bg-gray-800 pb-6 sm:pb-8 lg:pb-12">
		<Header />
		<div class="hidden sm:block" aria-hidden="true">
			<div class="pb-4">
				<div class="border-t border-gray-500"></div>
			</div>
		</div>
		<div class="container mx-auto px-16 py-8">
			<div class="grid gap-2 md:grid-cols-2">
				<div class="space-y-4">
					<div class="relative w-[60%] overflow-hidden rounded-lg bg-gray-800">
						<img
							transition:name={movies[parseInt(id!) - 1] !== undefined
								? movies[parseInt(id!) - 1].imgURL
								: movies[0].imgURL}
							src={movies[parseInt(id!) - 1] !== undefined
								? movies[parseInt(id!) - 1].imgURL
								: movies[0].imgURL}
							class="h-full w-full object-cover object-center"
						/>

						<span
							class="absolute left-0 top-0 rounded-br-lg bg-red-500 px-3 py-1.5 text-sm uppercase tracking-wider text-white"
						>
							sale
						</span>
					</div>
				</div>
				<div>
					<div class="mb-2 md:mb-3">
						<span class="mb-0.5 inline-block text-slate-300">
							{
								movies[parseInt(id!) - 1] !== undefined
									? movies[parseInt(id!) - 1].releaseYear
									: movies[0].releaseYear
							}
						</span>
						<h2
							class="text-2xl font-bold text-slate-200 lg:text-3xl"
							transition:name={movies[parseInt(id!) - 1] !== undefined
								? movies[parseInt(id!) - 1].name
								: movies[0].name}
						>
							{
								movies[parseInt(id!) - 1] !== undefined
									? movies[parseInt(id!) - 1].name
									: movies[0].name
							}
						</h2>
					</div>
					<div class="mb-6 flex items-center md:mb-10">
						<div class="-ml-1 flex gap-0.5">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6 text-yellow-400"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
								></path>
							</svg>

							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6 text-yellow-400"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
								></path>
							</svg>

							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6 text-yellow-400"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
								></path>
							</svg>

							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6 text-yellow-400"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
								></path>
							</svg>

							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6 text-gray-300"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
								></path>
							</svg>
						</div>

						<span class="ml-2 text-sm text-slate-300">4.2</span>

						<a
							href="#"
							class="ml-4 text-sm font-semibold text-indigo-400 transition duration-100 hover:text-indigo-600 active:text-indigo-700"
						>
							view all 47 reviews
						</a>
					</div>
					<div class="mb-4">
						<div class="flex items-end gap-2">
							<span class="text-xl font-bold text-slate-300 md:text-2xl"> Cast</span>
						</div>

					</div>
					<div class="mb-6 flex items-center gap-2 text-slate-300">

						<span class="text-sm">
							{
								movies[parseInt(id!) - 1] !== undefined
									? movies[parseInt(id!) - 1].cast[0]
									: movies[0].cast[0]
							}
						</span>
						<div class="divider divider-horizontal">|</div>
						<span class="text-sm">
							{
								movies[parseInt(id!) - 1] !== undefined
									? movies[parseInt(id!) - 1].cast[1]
									: movies[0].cast[1]
							}
						</span>
						<div class="divider divider-horizontal">|</div>
						<span class="text-sm">
							{
								movies[parseInt(id!) - 1] !== undefined
									? movies[parseInt(id!) - 1].cast[2]
									: movies[0].cast[2]
							}
						</span>
					</div>
					<div class="flex gap-2.5">
						<a
							href="#"
							class="inline-block flex-1 rounded-lg bg-indigo-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 sm:flex-none md:text-base"
						>
							Write a review
						</a>

						<a
							href="#"
							class="inline-block rounded-lg bg-gray-200 px-4 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-6 w-6"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
								></path>
							</svg>
						</a>
					</div>
					<div class="mt-10 md:mt-10 lg:mt-10">
						<div class="mb-3 text-lg font-semibold text-slate-200">Plot</div>

						<p class="text-slate-300">
							{
								movies[parseInt(id!)] !== undefined
									? movies[parseInt(id!) - 1].plot
									: movies[0].plot
							}
						</p>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
